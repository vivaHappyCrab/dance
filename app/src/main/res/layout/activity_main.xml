<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/exit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textSize="20dp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="700dp"
        android:contextClickable="true"
        android:id="@+id/frameLayout"
        android:layout_below="@+id/exit"
        android:layout_alignLeft="@+id/exit"
        android:layout_alignStart="@+id/exit"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="-12dp"
        android:layout_marginRight="-15dp">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nominationList"
            android:layout_marginTop="47dp"
            android:choiceMode="singleChoice"
            android:longClickable="true"
            android:headerDividersEnabled="false"
            android:footerDividersEnabled="false"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:fastScrollEnabled="false"
            android:drawSelectorOnTop="true"
            android:background="@color/button_material_light"
            android:clickable="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp" />
    </FrameLayout>

    <Button
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:text="Ok"
        android:id="@+id/next"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:textSize="24dp" />

    <Button
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:text="@string/Rfr"
        android:id="@+id/refresh"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/next"
        android:layout_centerHorizontal="true"
        android:textSize="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resque"
        android:layout_alignTop="@+id/exit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/sett"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/charge"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="160dp"
        android:textSize="48sp"
        android:width="150dp"
        android:minWidth="150dp"
        android:layout_alignParentEnd="false"
        android:gravity="center_vertical|center_horizontal" />

</RelativeLayout>

